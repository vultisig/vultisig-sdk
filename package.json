{
  "name": "vultisig-sdk",
  "type": "module",
  "packageManager": "yarn@4.9.1",
  "workspaces": [
    "clients/cli",
    "examples/*",
    "packages/sdk"
  ],
  "scripts": {
    "lint": "eslint 'packages/**/*.{js,jsx,ts,tsx}' 'examples/**/*.{js,jsx,ts,tsx}' 'clients/cli/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint 'packages/**/*.{js,jsx,ts,tsx}' 'examples/**/*.{js,jsx,ts,tsx}' 'clients/cli/**/*.{js,jsx,ts,tsx}' --fix",
    "build:sdk": "yarn workspace @vultisig/sdk build",
    "sync-packages": "syncpack fix-mismatches",
    "typecheck": "tsc --noEmit",
    "test": "yarn workspace @vultisig/sdk test",
    "test:unit": "yarn workspace @vultisig/sdk test:unit",
    "test:integration": "yarn workspace @vultisig/sdk test:integration",
    "test:watch": "yarn workspace @vultisig/sdk test:watch",
    "test:changed": "yarn workspace @vultisig/sdk test:changed",
    "knip": "knip",
    "check:all": "yarn lint && yarn typecheck && yarn test && yarn knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "build:prod": "yarn workspace vultisig-sdk-react-example-2 build && yarn workspace vultisig-sdk-react-example-2 preview --port 5175 --strictPort --open=false",
    "dev:react": "yarn workspace vultisig-sdk-react-example-2 dev",
    "sync-and-copy": "node_modules/.bin/tsx scripts/sync-and-copy.ts",
    "build:sdk-full": "yarn sync-and-copy && yarn workspace @vultisig/sdk build",
    "prepare": "husky"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/sdk/tests/**/*.test.ts": [
      "vitest related --run"
    ],
    "packages/sdk/tests/fixtures/**/*.json": [
      "node scripts/validate-fixtures.js"
    ]
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@google-cloud/translate": "^9.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^9.0.9",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "knip": "^5.46.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.3",
    "syncpack": "^13.0.3",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  },
  "resolutions": {
    "readable-stream": "3.6.2",
    "@noble/hashes": "1.8.0"
  }
}
