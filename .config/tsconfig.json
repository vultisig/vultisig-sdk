{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/core/*"],
      "@lib/*": ["packages/lib/*"]
    }
  },
  "references": [],
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "types.d.ts"
  ]
}
