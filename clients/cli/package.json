{
  "name": "@vultisig/cli",
  "version": "1.0.0",
  "description": "Vultisig CLI - Multi-Party Computation wallet command-line interface",
  "main": "dist/cli.js",
  "bin": {
    "vultisig": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc --noEmitOnError false && tsc-alias",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:all": "node src/tests/run-all-tests.js",
    "test:commands": "jest src/tests/commands.test.js",
    "test:addresses": "jest src/tests/address-validation.test.js",
    "test:sdk": "jest src/tests/sdk-integration.test.js",
    "test:regression": "jest src/tests/regression.test.js"
  },
  "dependencies": {
    "@vultisig/sdk": "workspace:*",
    "commander": "^14.0.0",
    "dotenv": "^16.4.5",
    "inquirer": "^12.9.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "undici": "^7.3.0"
  },
  "keywords": [
    "vultisig",
    "cli",
    "mpc",
    "threshold-signature",
    "bitcoin",
    "ethereum",
    "solana",
    "wallet"
  ],
  "author": "Vultisig",
  "license": "MIT",
  "devDependencies": {
    "jest": "^30.1.3",
    "tsc-alias": "^1.8.16"
  }
}
