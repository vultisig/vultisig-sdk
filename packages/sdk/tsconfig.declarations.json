{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./core/**/*.ts",
    "./core/**/*.tsx",
    "./lib/**/*.ts",
    "./lib/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ]
}
