{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@helpers/*": ["./tests/helpers/*"],
      "@types": ["./src/types"],
      "@core/*": ["../core/*"],
      "@lib/*": ["../lib/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
