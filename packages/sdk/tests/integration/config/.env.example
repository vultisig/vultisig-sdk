# Integration Test Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================================================
# REQUIRED: Vault Configuration
# ==============================================================================

# Password to decrypt the test vault file (test-vault.json.enc)
VAULT_PASSWORD=your_secure_password_here

# ==============================================================================
# OPTIONAL: Test Execution Settings
# ==============================================================================

# Set to 'true' to skip broadcasting transactions (sign only, don't broadcast)
# This is useful for testing without spending funds
DRY_RUN=false

# ==============================================================================
# OPTIONAL: Chain-Specific Configuration
# ==============================================================================

# Solana Configuration
# ---------------------
# Recipient address for Solana transfers (if not set, will self-transfer)
TEST_RECIPIENT_SOL=

# Solana RPC endpoint (defaults to public mainnet if not set)
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com

# Priority fee in microlamports (defaults to 5000 if not set)
SOLANA_PRIORITY_FEE=5000

